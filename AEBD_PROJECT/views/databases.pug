extends layout
block content
  .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h1.w3-center DataBases 
                center
                    img(src='https://cdn2.iconfinder.com/data/icons/amazon-aws-stencils/100/Database_copy_Amazon_RDS_Oracle_DB_Instance-512.png' style='width:120px; height:120px;')
            .w3-container
              table.w3-table.w3-centered
                tr
                  th.w3-gray
                    b Id
                  td.w3-light-gray= databases.id_bd
                tr
                  th.w3-gray
                    b Name
                  td.w3-light-gray= databases.name
                tr
                  th.w3-gray
                    b Platform
                  td.w3-light-gray= databases.platform
                tr
                  th.w3-gray
                    b TimeStamp
                  td.w3-light-gray= databases.timestamp